# Edge Craft Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
SERVER_PORT=2567

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/edgecraft

# Redis (for room state in production)
# REDIS_URL=redis://localhost:6379

# CDN Configuration
# CDN_URL=https://cdn.edgecraft.game
# ASSET_URL=https://assets.edgecraft.game

# Multiplayer Configuration
MAX_PLAYERS_PER_ROOM=12
TICK_RATE=60
NETWORK_RATE=20

# Security
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=your-session-secret

# External Services (future)
# ANALYTICS_KEY=
# SENTRY_DSN=

# Development
DEBUG=false
ENABLE_SOURCE_MAPS=true

# Asset Validation
VALIDATE_ASSETS_ON_BUILD=true
REJECT_COPYRIGHTED_CONTENT=true